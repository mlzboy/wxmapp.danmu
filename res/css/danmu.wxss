/**
 * 弹幕样式
 * @author carlli
 */
.danmu-layerbox{
    width: 100%;
    height: 442rpx;
    position: absolute;
    left: 0;
    top: 0;
    background-color: rgba(255, 255, 255, .0);
    z-index: 50;
}
.landscape .danmu-layerbox{
    height: 100%;
}
.danmu-text{
    position: absolute;
    white-space: nowrap;
}
.danmu-text.ani{
    transform: translate(100%, 0) translateZ(0);
}
